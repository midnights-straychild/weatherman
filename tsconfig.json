{
  "compilerOptions": {
    "outDir": "./static/",
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "typeRoots" : [
      "./node_modules/@types/",
      "./src/@types/"
    ],
    "types": [
      "webpack-env"
    ],
    "lib": [
      "dom",
      "es5",
      "es6",
      "scripthost",
      "es2015.promise"
    ],
    "declaration": true,
    "declarationDir": "./static",
    "sourceMap": true,
    "noImplicitAny": true,
    "removeComments": true
  },
  "exclude": [
    //"node_modules"
  ],
  "include": [
    "src/**/*"
  ],
  "awesomeTypescriptLoaderOptions": {
    "isolatedModules": true,
    "forceIsolatedModules": true,
    "useCache": true,
    "reportFiles": [
      "src/ts/**/*.{ts,tsx}"
    ]
  }
}